<div id="alert"></div>


<%= form_for @funding, :remote => true do |f| %>
  <div class="row">
    <div class="large-8 columns">
      <% if @funding.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@funding.errors.count, "error") %> prohibited this funding from being saved:</h2>

          <ul>
          <% @funding.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label(:company) do %>
            Company
            <%= f.collection_select :company, Company.all.to_a, :id, :name, {include_blank: true}, class: "chosen", data: {placeholder: "Select a Company"} %>
          <% end %>
        
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label(:amount) do %>
            Amount
            <%= f.text_field :amount, placeholder: 'Enter amount to fund' %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label(:percentage) do %>
            Percentage
            <%= f.text_field :percentage, placeholder: 'Enter percentage for amount' %>
          <% end %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit 'Submit', class: 'button' %>
      </div>
    </div>
  </div>
<% end %>
