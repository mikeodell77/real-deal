<div class="row">
  <div class="small-3 columns">
    <h2>Sign up</h2>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="row">

    <div class="small-9 columns"><%= devise_error_messages! %></div>

    <div class="small-3 columns"><%= f.label :email %></div>
    <div class="small-9 columns"><%= f.email_field :email, :autofocus => true %></div>

    <div class="small-3 columns"><%= f.label :password %></div>
    <div class="small-9 columns"><%= f.password_field :password %></div>

    <div class="small-3 columns"><%= f.label :password_confirmation %></div>
    <div class="small-9 columns"><%= f.password_field :password_confirmation %></div>

    <div class="small-9 columns"><%= f.submit "Sign up", class: 'button' %></div>
  </div>
<% end %>

<div class="row">
  <div class="small-9 columns">
    <%= render "devise/shared/links" %>
  </div>
</div>
